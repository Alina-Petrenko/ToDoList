@model List<ToDoList.Models.TodoItem>

<h2>To-Do List</h2>

@if (Model.Count == 0)
{
    <p>No tasks found.</p>
}
else
{
    <ul>
        @foreach (var task in Model)
        {
            <li>@task.TaskName <a asp-action="Delete" asp-route-id="@task.Id">[Delete]</a></li>
        }
    </ul>
}

<a asp-action="Create">Add New Task</a>